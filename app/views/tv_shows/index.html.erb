<p id="notice"><%= notice %></p>
<div class="container">
  <%= render "layouts/title" %>
  <%= render "layouts/search" %>
  <div class="row">
    <div class="col s12">
      <div class="card red accent-4">
        <div class="row">
          <div class="col s12 m8">
            <div class="card-content white-text left-align">
              <span class="flow-text">Popular Shows</span>
            </div>
          </div>
          <div class="col s12 m4">
            <div class="card-content white-text right-align">
              <div class="input-field">
                <i class="material-icons prefix">search</i>
                <input type="text" id="autocomplete-input" class="autocomplete">
                <label for="autocomplete-input"></label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <% @tv_shows.each_with_index do |tv_show, index| %>
    <div class="col s12 m6 l4">
      <div class="card medium black white-text hoverable">
        <div class="card-image">
          <div class="img-fade">
            <img src="https://image.tmdb.org/t/p/w500<%= tv_show["backdrop_path"] %>">
          </div>
          <span class="card-title name"><%= tv_show["name"] %></span>
        </div>
        <div class="overview-text hub">
          <%= tv_show["overview"][0..300] + '...' %>
          <%= link_to 'MORE', view_it_tv_show_path(tv_show["id"]) %>
          <span class="invisible_tv_show_ids"><%= tv_show["id"] %></span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
