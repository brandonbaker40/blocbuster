<p id="notice"><%= notice %></p>

<div class="container">
  <div class="col s12">
    <div class="row">
      <div class="col s12">
        <div class="card large horizontal">
          <div class="card-image responsive-img">
            <img src="https://image.tmdb.org/t/p/w500<%= @tv_show["poster_path"] %>">
          </div>
          <div class="card-stacked">
            <div class="card-content">
              <h5><%= @tv_show["name"] %></h5>
              <p><%= @tv_show["overview"] %></p>
              <h5>Creators:</h5>
              <% @tv_show["created_by"].each do |creator| %>
                <p class="flow-text"><%= creator["name"] %></p>
              <% end %>
              <h5>Watch on:</h5>
              <% @tv_show["networks"].each do |network| %>
                <%= network["name"] %><br>
                <%= network["logo_path"] %><br>
              <% end %>
            </div>
            <div class="card-action border-none right-align">
              <a class="waves-effect waves-light btn red darken-3 box-shadow">Watch Now</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
